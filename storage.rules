rules_version = '2';

// Reglas de seguridad para Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {

    // Permitir lectura pública de todas las imágenes
    // (las imágenes de productos pueden ser vistas por todos)
    match /{allPaths=**} {
      allow read: if true;
    }

    // Imágenes de productos
    match /products/{productId}/{fileName} {
      // Permitir escritura solo a usuarios autenticados
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Máximo 5MB
                   && request.resource.contentType.matches('image/.*');  // Solo imágenes

      // Permitir eliminar solo a usuarios autenticados
      allow delete: if request.auth != null;
    }

    // Directorio temporal para productos que aún no tienen ID
    match /products/temp/{fileName} {
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null;
    }
  }
}
