{
  "name": "tienda-pos-cloudflare-worker",
  "version": "1.0.0",
  "description": "Cloudflare Workers API for Tienda POS multi-tenant",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "kv:create": "wrangler kv:namespace create TENANTS",
    "d1:create:manager": "wrangler d1 create tenants-manager",
    "d1:create:tenant": "node scripts/create-tenant-db.js",
    "migrate:schema": "node scripts/apply-schema.js",
    "migrate:data": "node scripts/migrate-from-firebase.js",
    "test": "vitest"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "d1",
    "multi-tenant",
    "pos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "date-fns": "^4.1.0",
    "firebase-admin": "^13.6.0",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "resend": "^6.6.0"
  }
